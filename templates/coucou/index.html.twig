{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container">
		{% include "coucou/_menu.html.twig" %}
		<h1>{{ title }}</h1>
		{% if app.user %}
			<h3>INFOS USER :</h3>
			<p>Username: {{ app.user.username }}</p>
			<h4>SESSION INFOS :</h4>
			{% for session in app.session.all %}
				<pre>{{ session }}</pre>
			{% endfor %}
		{% endif %}
		{% if app.debug %}
			<h3>DEBUG :</h3>
			<p>Request method: {{ app.request.method }}</p>
			<p>Application Environment: {{ app.environment }}</p>
		{% endif %}
	</div>
{% endblock %}
